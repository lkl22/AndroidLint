{
  "log-usage": {
    "reportMessage": "Do not directly invoke android.util.Log methods.Please use com.lkl.lint.commonlib.utils.LogUtils replace.",
    "fixes": [
      {
        "displayName": "Replace Log() with LogUtils()",
        "className": "com.lkl.lint.commonlib.utils.LogUtils"
      }
    ]
  },
  "serializable_usage": {
    "nameRegex": "^(com\\.lkl\\.lint\\.demo|com\\.lkl\\.lint\\.commonlib)",
    "reportMessage": "该对象必须要实现Serializable接口，因为外部类实现了Serializable接口",
    "severity": "warning"
  },
  "start-activity-usage": {
    "reportMessage": "Do not directly invoke start activity some methods.",
    "detectMethodNames": [
      "startActivity",
      "startActivityForResult"
    ],
    "fixes": [
      {
        "displayName": "Replace cur method with JumpUtils's method.",
        "className": "com.lkl.lint.commonlib.utils.JumpUtils",
        "isStaticMethod": "true",
        "needCallerParam": "true",
        "methodMap": {
          "startActivity": "safeStartActivity"
        }
      }
    ]
  },
  "method-param-usage": {
    "reportMessage": "Please use the specified parameters.",
    "methods": [
      {
        "reportMessage": "Please use the specified scheme parameters.",
        "className": "android.net.Uri.Builder",
        "buildVariant": "product",
        "methodName": "scheme",
        "params": [
          {
            "index": 0,
            "value": "\"https://\""
          }
        ]
      },
      {
        "reportMessage": "Please use the specified path parameters.",
        "className": "android.net.Uri.Builder",
        "methodName": "path",
        "params": [
          {
            "index": 0,
            "value": "\"hello\""
          }
        ]
      },
      {
        "className": "android.net.Uri.Builder",
        "methodName": "appendQueryParameter",
        "params": [
          {
            "index": 0,
            "value": "\"host\""
          },
          {
            "index": 1,
            "value": "\"baidu\""
          }
        ]
      }
    ]
  },
  "api-usage": {
